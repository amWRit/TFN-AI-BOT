# AWS Bedrock Configuration
AWS_REGION=us-east-1

AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_SESSION_TOKEN=your_session_token_here  # Optional, for temporary credentials

# LLM Configuration
BEDROCK_MODEL_ID=amazon.nova-lite-v1:0  # or amazon.nova-pro-v1:0, amazon.claude-3-5-sonnet, etc.
LLM_TEMPERATURE=0.1  # Lower = more deterministic, Higher = more creative

# Chroma Vector DB (Optional)
CHROMA_URL=http://localhost:8000  # Default: uses in-memory storage

# Next.js
NEXT_PUBLIC_API_URL=http://localhost:3000
